<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >


    <fragment
        android:id="@+id/idFragmentOne"
        android:name="com.example.pratikthapa.twobuttonspractice.OneFragement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        tools:layout="@layout/fragment_one" />

    <fragment
        android:id="@+id/idFragmentTwo"
        android:name="com.example.pratikthapa.twobuttonspractice.TwoFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        tools:layout="@layout/fragment_two" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/idOrder"/>
</LinearLayout>